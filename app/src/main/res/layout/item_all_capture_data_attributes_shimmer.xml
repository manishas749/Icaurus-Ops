<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/capture_data_items_background"
            android:paddingStart="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:layout_marginBottom="4dp"
            android:paddingEnd="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="11dp">

            <View
                android:id="@+id/txtSequenceNo"
                android:layout_width="259dp"
                android:layout_height="12dp"
                android:background="#dddddd"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/txtDescription"
                android:layout_width="140dp"
                android:layout_height="16dp"
                android:background="#dddddd"
                android:lineSpacingExtra="10sp"
                android:textColor="@color/capture_data_text_color"
                android:textSize="14sp"
                android:textStyle="normal"
                android:layout_marginTop="12dp"
                app:fontFamily="sans-serif"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtSequenceNo"
                tools:text="Any alarm are running or not?" />

            <View
                android:id="@+id/txtValue"
                android:layout_width="140dp"
                android:layout_height="9dp"
                android:background="#dddddd"
                android:layout_marginTop="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtDescription"/>

            <View
                android:id="@+id/txtCapturedBy"
                android:layout_width="140dp"
                android:layout_height="9dp"
                android:background="#dddddd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txtValue"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</layout>