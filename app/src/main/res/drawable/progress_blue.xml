<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <gradient
                    android:angle="270"
                    android:centerColor="#bbe1ff"
                    android:centerY="0.75"
                    android:endColor="#bbe1ff"
                    android:startColor="#bbe1ff" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                        android:angle="270"
                        android:centerColor="#0079d7"
                        android:centerY="0.75"
                        android:endColor="#0079d7"
                        android:startColor="#0079d7" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                        android:angle="270"
                        android:endColor="#0079d7"
                        android:startColor="#0079d7" />
            </shape>
        </clip>
    </item>

</layer-list>