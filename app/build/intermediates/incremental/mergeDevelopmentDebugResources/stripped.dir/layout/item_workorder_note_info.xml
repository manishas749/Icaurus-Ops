        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" android:tag="layout/item_workorder_note_info_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="10sp"
            android:padding="5dp"
            android:tag="binding_1"                                                                                                          
            android:textColor="#212121"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UnusedAttribute"
            tools:text="Added by: Joe Palmer" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="end"
            android:lineSpacingExtra="10sp"
            android:padding="5dp"
            android:tag="binding_2"       
            android:textColor="#212121"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@+id/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/title"
            app:layout_constraintTop_toTopOf="@+id/title"
            tools:ignore="UnusedAttribute"
            tools:text="28 Mar, 2017 17:17:18" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:lineSpacingExtra="4sp"
            android:padding="5dp"
            android:textColor="#212121"
            android:textSize="14sp"
            android:textStyle="normal"
            android:tag="binding_3"  
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            tools:ignore="UnusedAttribute"
            tools:text="The Attchement with work order should get synced across to appliction" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:lineSpacingExtra="4sp"
            android:padding="5dp"
            android:tag="binding_4"              
            android:textColor="#212121"
            android:textSize="14sp"
            android:textStyle="normal"
                                                                                                     
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/content"
            tools:ignore="UnusedAttribute"
            tools:text="The Attchement with work order should get synced across to appliction" />

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#ececec"
            android:padding="5dp"
            android:tag="binding_5"                                                            
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/attachmentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="10sp"
            android:padding="5dp"
            android:tag="binding_6"                                                            
            android:textColor="#212121"
            android:textSize="14sp"
            android:textStyle="bold"
                                                                                               
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view"
            tools:ignore="UnusedAttribute"
            tools:text="1. Attachment" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="4sp"
            android:padding="5dp"
            android:textColor="#212121"
            android:textSize="14sp"
            android:textStyle="normal"
            android:tag="binding_7"                                                            
                                                           
            app:layout_constraintTop_toBottomOf="@+id/attachmentCount"
                                        
            tools:listitem="@layout/item_workorder_attachment"
            tools:text="Screen Shot 2017-03-17 at 8.27.38.png" />
    </androidx.constraintlayout.widget.ConstraintLayout>
         