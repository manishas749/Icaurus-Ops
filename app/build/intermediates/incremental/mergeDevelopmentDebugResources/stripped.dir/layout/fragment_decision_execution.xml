    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" android:tag="layout/fragment_decision_execution_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/activity_horizontal_margin">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtDecision"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/checklist_detail_text_size"
                        android:tag="binding_1"                 
                        tools:text="ghfghfhgf" />

                    <RelativeLayout
                        android:id="@+id/containerDecisionSeekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/txtDecisionNo"
                            style="@style/MaterialLightSubhead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/no"
                            android:textColor="@color/emergency_color_error" />

                        <com.icarus.customviews.CustomSeekBar
                            android:id="@+id/seekBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_toStartOf="@id/txtDecisionYes"
                            android:layout_toLeftOf="@id/txtDecisionYes"
                            android:layout_toEndOf="@id/txtDecisionNo"
                            android:layout_toRightOf="@+id/txtDecisionNo"
                            android:max="100"
                            android:progress="50"
                            android:progressDrawable="@android:color/transparent"
                            android:thumb="@drawable/ic_seekbar_thumb" />

                        <TextView
                            android:id="@+id/txtDecisionYes"
                            style="@style/FormsLightPlaceholder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:text="@string/yes"
                            android:textColor="@color/selected_radio" />

                    </RelativeLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSkipDefer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/button_bg_green"
                        android:enabled="false"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:letterSpacing="0.04"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:textColor="@color/disable_button_text"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:visibility="gone"
                        tools:ignore="UnusedAttribute" />
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

         